{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}
    <div class="container mx-auto py-8">
        <h1 class="text-4xl font-bold text-center mb-8">S'inscrire</h1>

        {{ form_start(registrationForm, {'attr': {'class': 'max-w-lg mx-auto bg-white p-8 rounded-lg shadow-lg'}}) }}

        {% if not registrationForm.vars.valid %}
            <div class="mb-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
                {% for error in registrationForm.vars.errors %}
                    <p>{{ dump(error) }}</p>
                {% endfor %}
            </div>
        {% endif %}

        <div class="mb-4">
            {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'block text-sm font-bold'}}) }}
            {{ form_widget(registrationForm.email, {'attr': {'class': 'w-full border border-gray-300 p-2 rounded-lg'}}) }}
            {{ form_errors(registrationForm.email, {'attr': {'class': 'text-red-600 text-sm'}}) }}
        </div>
        <div class="mb-4">
            {{ form_label(registrationForm.firstname, null, {'label_attr': {'class': 'block text-sm font-bold'}}) }}
            {{ form_widget(registrationForm.firstname, {'attr': {'class': 'w-full border border-gray-300 p-2 rounded-lg'}}) }}
            {{ form_errors(registrationForm.firstname, {'attr': {'class': 'text-red-600 text-sm'}}) }}
        </div>
        <div class="mb-4">
            {{ form_label(registrationForm.lastname, null, {'label_attr': {'class': 'block text-sm font-bold'}}) }}
            {{ form_widget(registrationForm.lastname, {'attr': {'class': 'w-full border border-gray-300 p-2 rounded-lg'}}) }}
            {{ form_errors(registrationForm.lastname, {'attr': {'class': 'text-red-600 text-sm'}}) }}
        </div>
        <div class="mb-4">
            {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'block text-sm font-bold'}}) }}
            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'w-full border border-gray-300 p-2 rounded-lg'}}) }}
            <p class="text-gray-600 text-sm">Votre mot de passe doit contenir au moins 6 caractères.</p>
            {{ form_errors(registrationForm.plainPassword, {'attr': {'class': 'text-red-600 text-sm'}}) }}
        </div>
        <div class="mb-4">
            {{ form_label(registrationForm.subscriptionId, 'Plan d\'abonnement', {'label_attr': {'class': 'block text-sm font-bold'}}) }}
            {{ form_widget(registrationForm.subscriptionId, {'attr': {'class': 'w-full border border-gray-300 p-2 rounded-lg'}}) }}
            {{ form_errors(registrationForm.subscriptionId, {'attr': {'class': 'text-red-600 text-sm'}}) }}
        </div>
        <button type="submit" class="w-full bg-red-600 text-white p-2 rounded-lg hover:bg-red-700">M'inscrire</button>
        {{ form_end(registrationForm) }}

        <p class="mt-4 text-center">Déjà inscrit(e) ? <a href="{{ path('app_login') }}" class="text-red-600 hover:underline">Me connecter</a></p>
    </div>
{% endblock %}
